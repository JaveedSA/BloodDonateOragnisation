<%- include('partials/header') %>

<body class="text-center BackgroundColorSky" style="background-color:rgb(230, 249, 255);">

  <div class="container col-sm-6" style="margin-top:80px;">


    <h2>Fill the form!</h2>
    <!-- "h3 mb-3 fw-normal" -->
    <form action="/success" method="post" onsubmit="alert('successfully registered and you can fill the second registration as usual');">

      <input type="text" class="form-control fname" placeholder="First name" name="name1" required>
      <input type="text" class="form-control lname" placeholder="Last name or Initial" name="name2" required>
      <input type="char" class="form-control phonenum" placeholder="Mobile Number" name="number11" required>

      <select class="form-control" name="state" id="countySel" size="1" required>
        <option selected="selected" disabled>Country</option>
      </select>

      <select class="form-control" name="countrya" id="stateSel" size="1" required>
        <option selected="selected" disabled>State</option>
      </select>

      <select class="form-control" name="district" id="districtSel" size="1" required>
        <option selected="selected" disabled>District</option>
      </select>

      <select class="form-control" name="blood1" id="bloodgroup" size="1" required>
        <option selected="selected" disabled>Blood Group</option>
        <option value="A+">A+</option>
        <option value="B+">B+</option>
        <option value="O+">O+</option>
        <option value="AB+">AB+</option>

        <option value="A-">A-</option>
        <option value="B-">B-</option>
        <option value="O-">O-</option>
        <option value="AB-">AB-</option>
      </select>

      <button class="btn  btn-primary " style="margin-top:10px;" type="submit">Register</button>

    </form>

  </div>

  <div class="" style="margin-top:130px;">
    <a class="btn btn-info btn-lg logbut" href="/logout" role="button">Log Out</a>
  </div>
  <%- include('partials/footer') %>
